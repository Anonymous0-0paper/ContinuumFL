{
  "experiment_name": "ContinuumFL_CIFAR100_Example",
  "description": "Example configuration for ContinuumFL with CIFAR-100 dataset",
  
  "system_architecture": {
    "num_devices": 50,
    "num_zones": 10,
    "num_edge_servers": 10,
    "region_size": [100.0, 100.0]
  },
  
  "zone_discovery_parameters": {
    "similarity_weights": {
      "spatial": 0.4,
      "data": 0.4,
      "network": 0.2
    },
    "similarity_threshold": 0.6,
    "min_zone_size": 3,
    "max_zone_size": 8,
    "distance_scaling": 10.0,
    "stability_tradeoff": 0.3,
    "stability_threshold": 0.1,
    "stability_window": 10
  },
  
  "federated_learning_parameters": {
    "num_rounds": 100,
    "local_epochs": 5,
    "learning_rate": 0.01,
    "batch_size": 32,
    "momentum": 0.9,
    "weight_decay": 0.0001
  },
  
  "aggregation_parameters": {
    "spatial_regularization": 0.1,
    "momentum_eta": 0.9,
    "staleness_penalty": 0.1,
    "max_staleness": 5,
    "fairness_strength": 0.5
  },
  
  "communication_optimization": {
    "compression_rate": 0.1,
    "quantization_bits": 8,
    "cache_threshold": 0.95
  },
  
  "device_heterogeneity_simulation": {
    "device_compute_range": [1.0, 10.0],
    "device_memory_range": [1.0, 8.0],
    "device_bandwidth_range": [10.0, 100.0],
    "intra_zone_latency_range": [5, 15],
    "inter_zone_latency_range": [20, 100]
  },
  
  "dataset_configuration": {
    "dataset_name": "cifar100",
    "data_distribution": "dirichlet",
    "intra_zone_alpha": 0.5,
    "inter_zone_alpha": 0.1,
    "train_test_split": 0.8
  },
  
  "model_configuration": {
    "model_type": "resnet18",
    "num_classes": 100,
    "input_shape": [3, 32, 32]
  },
  
  "logging_and_visualization": {
    "log_level": "INFO",
    "save_logs": true,
    "log_dir": "./logs",
    "checkpoint_dir": "./checkpoints",
    "results_dir": "./results",
    "plot_interval": 10,
    "save_interval": 25
  },
  
  "experimental_settings": {
    "random_seed": 42,
    "device": "cuda",
    "num_workers": 2
  },
  
  "baseline_comparisons": [
    "fedavg",
    "fedprox", 
    "hierfl",
    "clusterfl"
  ],
  
  "advanced_features": {
    "enable_differential_privacy": false,
    "dp_epsilon": 1.0,
    "dp_delta": 0.00001,
    "enable_secure_aggregation": false
  }
}